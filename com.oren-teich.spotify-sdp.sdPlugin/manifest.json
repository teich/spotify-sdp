{
	"Name": "spotify-sdp",
	"Version": "0.1.0.0",
	"Author": "Oren Teich",
	"Actions": [
		{
			"Name": "Counter",
			"UUID": "com.oren-teich.spotify-sdp.increment",
			"Icon": "imgs/actions/counter/icon",
			"Tooltip": "Displays a count, which increments by one on press.",
			"PropertyInspectorPath": "ui/increment-counter.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/counter/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Spotify Volume",
			"UUID": "com.oren-teich.spotify-sdp.volume",
			"Icon": "imgs/actions/spotify-volume/vol-icon",
			"Tooltip": "Control Spotify volume with a dial.",
			"PropertyInspectorPath": "ui/spotify-volume.html",
			"Controllers": [
				"Encoder"
			],
			"Encoder": {
				"layout": "$B1",
				"TriggerDescription": {
					"Push": "Mute/Unmute Spotify"
				}
			},
			"States": [
				{
					"Image": "imgs/actions/spotify-volume/vol-icon",
					"TitleAlignment": "middle",
					"TitleColor": "#FFFFFF",
					"FontSize": 20
				}
			]
		}
	],
	"Category": "spotify-sdp",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Description": "Control Spotify Volume with the Stream Deck Plus",
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.4"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "12"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"ApplicationsToMonitor": {
        "mac": ["com.spotify.client"]
    },
	"UUID": "com.oren-teich.spotify-sdp"
}
